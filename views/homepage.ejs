<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"/>
    <link rel="stylesheet" href="css/homepage.css"/>
    <link rel="icon" href="images/icon.ico">
  </head>
  <body>
    <%- include('partials/header'); -%> 
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Create new event</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form action="/createEvent" autocomplete="off" method="post">
            <div class="modal-body">
              <div class="mb-3">
                <label for="recipient-name" class="col-form-label" autocomplete="off">Title:</label>
                <input type="text" class="form-control" id="recipient-name" name="eventTitle">
              </div>
              <div class="mb-3">
                <label for="message-text" class="col-form-label" autocomplete="off">Details:</label>
                <textarea name="eventDescription" id="eventDescription" class="form-control" rows="4"></textarea>
              </div>
              <div class="mb-3">
                <label for="message-text" class="col-form-label" autocomplete="off">Player Attendance Required:</label>
                <input type="number" class="form-control" id="recipient-name" name="attendance">
              </div>
              <div class="mb-3">
                <label for="message-text" class="col-form-label" autocomplete="off">Opposing Team:</label>
                <input type="text" class="form-control" id="recipient-name" name="opposingTeam">
              </div>
              <div class="mb-3">
                <label for="message-text" class="col-form-label">Date:</label>
                <input type="date" class="form-control" id="recipient-name" name="date" min="<%= today %>">
              </div>
              <div class="mb-3">
                <label for="message-text" class="col-form-label" autocomplete="off">Location:</label>
                <input type="text" class="form-control" id="recipient-name" name="location">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Create</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <% if(currentUser.accountType ==="coach"){ %>
    <div class="d-grid gap-2">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Add New Event</button>
    </div> 
    <% } %> 

    <% for (let i = 0; i < foundEvents.length; i++) { %>
      <div class="accordion-item">
        <h2 class="accordion-header" id="panelsStayOpen-heading<%=i%>">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapse<%=i%>" aria-expanded="false" aria-controls="panelsStayOpen-collapse<%=i%>">
            <%= foundEvents[i].eventTitle %>
            <% if(foundEvents[i].availablePlayers.length < foundEvents[i].attendance && currentUser.accountType === "coach"){ %> 
              <img src="images/notification.png" alt="notification.png" style="position: absolute;right: 5%; width:5px;height:5px;">
            <% } %>
            <% if(!foundEvents[i].availablePlayers.some(user => user.username === currentUser.username) && !foundEvents[i].unavailablePlayers.some(user => user.username === currentUser.username) && currentUser.accountType === "player"){ %> 
              <img src="images/notification.png" alt="notification.png" style="position: absolute;right: 5%; width:5px;height:5px;">
            <% } %>
          </button>
        </h2>
        <div id="panelsStayOpen-collapse<%=i%>" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-heading<%=i%>">
          <div class="accordion-body">
            <form action="/canAttend" method="post">
              <input name="eventId" value="<%= foundEvents[i].id %>" style="display: none;">
              <p><strong>Event Description: </strong><%= foundEvents[i].eventDescription %></p>
              <p><strong>Opposing Team: </strong><%= foundEvents[i].opposingTeam %></p>
              <p><strong>Date: </strong> <%= foundEvents[i].date %></p>
              <p><strong>Location: </strong> <%= foundEvents[i].location %></p>
              <p><strong>Available Players:</strong></p>
              <ul>
                <% foundEvents[i].availablePlayers.forEach(user => { %> 
                  <li><%= user.name %></li>
                <% }); %> 
              </ul>
              <p><strong>Unavailable Players:</strong></p>
              <ul>
                <% foundEvents[i].unavailablePlayers.forEach(user => { %> 
                  <li><%= user.name %></li>
                <% }); %> 
              </ul>
              <% if(currentUser.accountType === "player"){ %> 
              <div class="btn-group">
                <% if(!foundEvents[i].availablePlayers.some(user => user.username === currentUser.username)){ %>
                  <button type="submit" class="btn btn-primary">I can attend</button>
                <% } %> 
                <% if(!foundEvents[i].unavailablePlayers.some(user => user.username === currentUser.username)){ %>
                  <button type="submit" class="btn btn-primary" formaction="/cannotAttend">I cannot attend</button>
                <% } %> 
              </div>
              <% } %>
            </form>
          </div>
        </div>
      </div>  
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>