<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <link rel="stylesheet" href="css/homepage.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"/>
    <link rel="stylesheet" href="css/evo-calendar.min.css">
    <link rel="stylesheet" href="css/evo-calendar.midnight-blue.min.css">
    <link rel="icon" href="images/icon.ico">
  </head>
  <body>
    <header>
      <nav class="main-nav">
        <input type="checkbox" id="check" />
        <label for="check" class="menu-btn">
          <i class="fas fa-bars"></i>
        </label>
        <a href="#" class="logo">LogicPatch</a>
        <a href="#" class="otherHeader">About Us</a>
        <a href="#" class="otherHeader">Contact Us</a>
        <ul class="navlinks">
          <li><a href="#">Services</a></li>
          <li><a href="#">Projects</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#" class="contact">Contact</a></li>
        </ul>
      </nav>
    </header>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Create new event</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form action="/createEvent" method="post">
            <div class="modal-body">
              <div class="mb-3">
                <label for="recipient-name" class="col-form-label" autocomplete="off">Title:</label>
                <input type="text" class="form-control" id="recipient-name" name="eventTitle">
              </div>
              <div class="mb-3">
                <label for="message-text" class="col-form-label" autocomplete="off">Opposing Team</label>
                <input type="text" class="form-control" id="recipient-name" name="opposingTeam">
              </div>
              <div class="mb-3">
                <label for="message-text" class="col-form-label">Date:</label>
                <input type="date" class="form-control" id="recipient-name" name="date">
              </div>
              <div class="mb-3">
                <label for="message-text" class="col-form-label" autocomplete="off">Location:</label>
                <input type="text" class="form-control" id="recipient-name" name="location">
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Create</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    

      <div class="accordion-item">
        <h2 class="accordion-header" id="panelsStayOpen-heading1">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapse1" aria-expanded="false" aria-controls="panelsStayOpen-collapse1">
            <!-- Class title --> Title
          </button>
        </h2>
        <div id="panelsStayOpen-collapse1" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-heading1">
          <div class="accordion-body">
            <!-- description of event -->
          </div>
        </div>
      </div>

      <div class="d-grid gap-2">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">Add New Event</button>
      </div>
      
      <div id="calendar"></div>

      <script src="https://cdn.jsdelivr.net/npm/jquery@3.4.1/dist/jquery.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/evo-calendar@1.1.2/evo-calendar/js/evo-calendar.min.js"></script>

      <script>
        $(document).ready(function() {
            $('#calendar').evoCalendar({
              theme: 'Midnight Blue'
            })

            $('#calendar').evoCalendar('addCalendarEvent', {
              id: 'kNybja6',
              name: 'name',
              description: 'details',
              date: '12-29-2021',
              type: 'birthday'
            });
        })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>